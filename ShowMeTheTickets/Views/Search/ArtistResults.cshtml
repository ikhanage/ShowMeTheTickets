@model IEnumerable<GogoKit.Models.Response.SearchResult>

<div id="ResultsContainer" class="row">
    @if (!Model.Any())
    {
        <span class="col-md-6 col-md-offset-3">No results found.</span>
    }
    else
    {
        <div class="col-md-6 col-md-offset-3">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Choose an artist (click on a row)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var artist in Model)
                    {
                        <tr data-bind="click: SelectedArtist" onclick="SearchForArtists.SelectArtist('@artist.Title')" style="cursor: pointer">
                            <td class="text-center">
                                <span>@artist.Title</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>